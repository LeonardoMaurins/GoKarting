{{ form_start(form) }}
<table id="myTable" class="table table-hover table-bordered" style="width:75%">

    <tbody>
    <tr>
        <th scope="col">Username</th>
        <td>{{ form_widget(form.username) }}</td>
    </tr>
    <tr>
        <th scope="col">Password</th>
        <td>{{ form_widget(form.password) }}</td>
    </tr>
    {% if is_granted("ROLE_ADMIN") %}
    <tr>
        <th scope="col">Role</th>
        <td>{{ form_widget(form.role) }}</td>
    </tr>
    {% else %}
        {% do form.role.setRendered() %}
    {% endif %}
    </tbody>
</table>
<button class="btn btn-dark">{{ button_label|default('Save') }}</button><br><br>
{{ form_end(form) }}